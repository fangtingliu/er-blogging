<div class="messages">
  <ul class="nav nav-tabs">
    <li {{action "getMessageWithQuery" "false"}} id="unread" class={{if (eq active "unread") "active"}}>
      <a>
        Unread <span class="message-count">{{if (eq active "unread") model.length}}</span>
      </a>
    </li>
    <li {{action "getMessageWithQuery" "true"}} id="read" class={{if (eq active "read") "active"}}>
      <a>
        Read <span class="message-count">{{if (eq active "read") model.length}}</span>
      </a>
    </li>
    <li {{action "getMessageWithQuery" "all"}} id="all" class={{if (eq active "all") "active"}}>
      <a>
        All <span class="message-count">{{if (eq active "all") model.length}}</span>
      </a>
    </li>
  </ul>
  {{#each model as |message|}}
    <div class="message" data-toggle="collapse" data-target="#message{{message.id}}" aria-expanded="false" {{action "getMessageImage" message}}>

      <div class="comment-info-sec">
        <i class="fa fa-commenting-o" aria-hidden="true"></i>
        <span class="messager-name"><strong>{{message.name}}</strong></span>
        <span>â€”</span>
        <span>{{date-formatter message.createdAt}}</span>
      </div>

      <div class="row message-details collapse" id="message{{message.id}}">
        <div class="col-md-4 message-text">
          <div>{{message.message}}</div>
        </div>
        <div class="col-md-4">
          <img src={{message.filePath}} class="message-image"/>
        </div>
        <button class="btn btn-warning btn-sm col-md-2" type="button"{{action "readMessage" message}}>
          <i class="fa fa-check" aria-hidden="true"> Mark as Read</i>
        </button>
      </div>

    </div>
  {{/each}}
</div>
{{outlet}}
