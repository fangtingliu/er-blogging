<h1>Contact</h1>
<form class="contact" {{action "postMessage" model on="submit"}}>
  <div class="form-group">
    <label>Name</label>
    {{input value=model.name type="text" class="form-control" required=true}}
  </div>
  <div class="form-group">
    <label>Email address</label>
    {{input value=model.email type="email" class="form-control" required=true}}
  </div>
  <div class="form-group">
    <label>Message</label>
    {{textarea value=model.message class="form-control" required=true}}
  </div>
  <div class="form-group">
    <label>File</label>
    {{file-uploader fileAction="fileAction" status=status messageSendSucceed="messageSendSucceed"}}
  </div>
  <button type="submit" class="btn btn-success">Submit</button>
</form>

<p id="statusMessage">
  {{#if status.success}}
    Success
  {{else}}
    {{#if status.fail}}
      "Sorry, something went wrong!"
    {{/if}}
  {{/if}}
</p>
