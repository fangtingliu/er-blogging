<form class="contact" {{action "postMessage" model on="submit"}}>
  <h1>Contact</h1>
  <div class="form-group">
    <label>Name</label>
    {{input value=model.name type="text" class="form-control" required=true}}
  </div>
  <div class="form-group">
    <label>Email address</label>
    {{input value=model.email type="email" class="form-control" required=true}}
  </div>
  <div class="form-group">
    <label>Message</label>
    {{textarea value=model.message class="form-control" required=true}}
  </div>
  <div class="form-group">
    <label>File</label>
    {{file-uploader route="messages" fileAction="fileAction" status=status messageSendSucceed="messageSendSucceed"}}
  </div>
  <button type="submit" class="btn btn-lg col-md-12 btn-success submit">Submit</button>
</form>

<p id="statusMessage">
  {{#if status.success}}
    <p class="alert alert-success fade in">Successfully submitted message. MsCoding will be in contact in no time!</p>
  {{else}}
    {{#if status.fail}}
    <p class="alert alert-warning fade in">Sorry, something went wrong!</p>
    {{/if}}
  {{/if}}
</p>
